<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/rectimage2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/rectangle_sim_light_gray"
        app:layout_constraintBottom_toBottomOf="@+id/rectimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/rectimage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/rectangle_sim_very_dark_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></ImageView>

    <ImageView
        android:id="@+id/background"
        android:layout_width="404dp"
        android:layout_height="373dp"
        android:layout_marginTop="4dp"
        android:alpha=".55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/widok840narrow" />

    <EditText
        android:id="@+id/alarmtyped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="120dp"
        android:hint="000000"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="6"
        android:singleLine="true"
        android:text="701150"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/orange_dbb"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background" />

    <ImageView
        android:id="@+id/rectorange"
        android:layout_width="177dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="291dp"
        android:src="@drawable/rectangle_orange"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"></ImageView>

    <EditText
        android:id="@+id/db2"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="285dp"
        android:ems="3"
        android:inputType="number"
        android:text="DB2."
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background" />

    <EditText
        android:id="@+id/dbbresult"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="285dp"
        android:ems="5"
        android:inputType="number"
        android:text="DBX122.3"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background" />

    <TextView
        android:id="@+id/versionlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:text="0.0.0.VRS"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background" />

    <ImageButton
        android:id="@+id/buttoncoffee"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/button_background"
        android:elevation="10dp"
        android:onClick="loadCoffee"
        android:padding="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonbug"
        app:layout_constraintTop_toBottomOf="@+id/background"
        app:srcCompat="@drawable/coffee" />

    <ImageButton
        android:id="@+id/buttonbug"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/button_background"
        android:elevation="10dp"
        android:onClick="loadBug"
        android:paddingTop="25dp"
        android:paddingBottom="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background"
        app:srcCompat="@drawable/bug"
        tools:srcCompat="@drawable/bug" />


</androidx.constraintlayout.widget.ConstraintLayout>